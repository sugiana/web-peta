<!DOCTYPE html>
<html>
<head>
    <title>Peta Indonesia - Batas Wilayah</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <style>
        body { margin: 0; padding: 0; }
        #map { height: 100vh; width: 100vw; }
        .info {
            padding: 6px 8px;
            font: 14px/16px Arial, Helvetica, sans-serif;
            background: white;
            background: rgba(255,255,255,0.8);
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            border-radius: 5px;
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <div class="info" id="info">Zoom untuk melihat batas lebih detail</div>

    <script>
        const map = L.map('map').setView([-2.5, 118], 5);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: 'Â© OpenStreetMap contributors'
        }).addTo(map);

        let geojsonLayer;
        let currentLevel = 0;

        function getLevel(zoom) {
            if (zoom < 7) return 1; // Provinsi
            if (zoom < 10) return 2; // Kabupaten
            if (zoom < 13) return 3; // Kecamatan
            return 4; // Desa
        }

        function getLevelName(level) {
            switch(level) {
                case 1: return "Provinsi";
                case 2: return "Kabupaten";
                case 3: return "Kecamatan";
                case 4: return "Desa/Kelurahan";
                default: return "";
            }
        }

        function loadGeoJSON() {
            const zoom = map.getZoom();
            const level = getLevel(zoom);
            const bbox = map.getBounds().toBBoxString();
            
            document.getElementById('info').innerHTML = 'Level: <b>' + getLevelName(level) + '</b> (Zoom: ' + zoom + ')';

            fetch('/geojson?tingkat=' + level + '&bbox=' + bbox)
                .then(response => response.json())
                .then(data => {
                    if (geojsonLayer) {
                        map.removeLayer(geojsonLayer);
                    }
                    geojsonLayer = L.geoJSON(data, {
                        style: function (feature) {
                            return {
                                color: "#3388ff",
                                weight: 2,
                                opacity: 1,
                                fillOpacity: 0.1
                            };
                        },
                        onEachFeature: function (feature, layer) {
                            layer.bindPopup(feature.properties.name);
                        }
                    }).addTo(map);
                });
        }

        map.on('moveend', loadGeoJSON);
        loadGeoJSON(); // Initial load
    </script>
</body>
</html>
